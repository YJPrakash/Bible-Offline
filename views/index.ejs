<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#e51c23">

    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Bible</title>
    <link rel="manifest" href="manifest.json">
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="iconfont/material-icons.css">
    <link rel="stylesheet" href="css/materialize.min.css" media="screen,projection">
    <style>
      nav ul a,
      nav .brand-logo {
        color: #444;
      }

      p {
        line-height: 2rem;
      }

      .sidenav-trigger {
        color: #26a69a;
      }

      .brand-logo {
        text-indent: 60px;
        background: no-repeat url('/images/manifest/icons8-holy-bible-50.png');
      }
      #view {
        margin-top: 20px;
        margin-bottom: 20px;
      }
      nav ul li.nomargin {
        margin: 0;
      }
    </style>
  </head>

  <body>
    <nav class="white" role="navigation">
      <div class="nav-wrapper container">
        <a id="logo-container" href="#" class="brand-logo black-text">Holy Bible</a>
        <div class="right">
          <!-- <label for="lang">Language</label> -->
          <select class="browser-default" name="lang" id="lang">
            <option value="en" tabIndex=-1>English</option>
            <option value="ta">Tamil</option>
          </select>
        </div>
        <div class="right hide-on-med-and-down">
            <!-- <label for="book">Book</label> -->
            <select class="browser-default" name="book" id="book"></select>
        </div>

        <ul id="nav-mobile" class="sidenav black-text browser-default">
        </ul>
        <a href="#" data-target="nav-mobile" class="sidenav-trigger"><i class="material-icons black-text">menu</i></a>
      </div>
    </nav>
    <main>
      <form id="bibleForm" action="#">

        <div class="row hide">
          <div class="col">
            <label for="chapter">Chapter</label>
            <input type="number" name="chapter" id="chapter">
          </div>
          <div class="col">
            <label for="verse">Verse</label>
            <input type="number" name="verse" id="verse">
          </div>
        </div>
        <div class="row hide">
          <i class="material-icons" id="back">arrow_back</i><label for="back">Prev</label>
          <i class="material-icons" id="forward">arrow_forward</i><label for="forward">Next</label>
        </div>
        <div class="row container" id="view">
        </div>
      </form>
    </main>
  </body>
  <script src="./js/materialize.min.js"></script>
  <script type=module src="./main.js"></script>
  <script src="./sw.js"></script>

</html>